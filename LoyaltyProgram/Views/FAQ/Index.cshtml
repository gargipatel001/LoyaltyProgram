@model IList<LoyaltyProgram.ViewModels.FAQViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="accordion" id="accordionExample">
        @foreach (var faq in Model)
        {

            <div class="card">
                <div class="card-header" id="headingOne_@faq.FAQId">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne_@faq.FAQId" aria-expanded="true" aria-controls="collapseOne_@faq.FAQId">
                            @faq.Question
                        </button>
                    </h2>
                </div>

                <div id="collapseOne_@faq.FAQId" class="collapse show" aria-labelledby="headingOne_@faq.FAQId" data-parent="#accordionExample">
                    <div class="card-body">
                        @faq.Answer
                    </div>
                </div>
            </div>


        }
    </div>

